<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    

    <bean id="queryable" class="org.adani.starbuck.data.core.sources.queryable.QueryableImpl" autowire="byName">
        <constructor-arg ref="testDbConfig"/>
    </bean>


    <!-- Example configuration for a database -->
    <bean id="testDbConfig" class="org.adani.starbuck.data.core.sources.queryable.QueryableInitialisationConfiguration"
          autowire="byName">
        <constructor-arg index="0" value="Initialisation Configurations for a H2 DataSource"/>
        <constructor-arg index="1">
            <map>
                <entry key="conf_dburl" value="jdbc:h2:tcp://localhost/~/athena"/>
                <entry key="conf_user" value="sa"/>
                <entry key="conf_pass" value=""/>
                <entry key="conf_driver" value="org.h2.Driver"/>
                <entry key="conf_type" value="DATABASE"/>
            </map>
        </constructor-arg>
    </bean>

</beans>